<section  class="mod flex flex-column {{#if mod_name}}{{mod_name}}{{/if}}" 
          data-role="mod"  
          {{#if data_conf}}data-conf="{{data_conf}}"{{/if}}>

  <section class="intro flex flex-item-grow" id="particles-js">
    <ul class="logo-wrapper flex flex-item-base">
        <li class="logo icn-before" data-role="logo"></li>
        <li class="typeface icn-before" data-role="typeface"></li>
    </ul>
  </section>

  <section class="current-projects flex flex-item-grow">
      {{#if data.posts}}
          {{#each data.posts}}
                {{#if this.photos}}
                  {{#each this.photos}}
                    {{#if this.alt_sizes}}
                      <div class="project flex-item-grow" style="height: {{this.alt_sizes.[2].height}}px; width: {{this.alt_sizes.[2].width}}px;">
                      <div class="overlay">
                        <span class="caption-drawer-opener icn-after" data-role="caption_drawer_opener"></span>
                        <div class="caption-drawer collapsed" data-role="caption_drawer">
                        {{../../this.summary}}
                      </div>
                      </div>
                      <img src="{{this.alt_sizes.[2].url}}">
                      </div>
                    {{/if}}
                  {{/each}}
                {{/if}}
          {{/each}}
      {{/if}}
  </section>
</section>
